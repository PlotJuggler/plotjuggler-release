QMainWindow {
    background: #EFEFEF;
}

QDialog {
    background: #EFEFEF;
}
QLabel {
    color: black;
}

QLineEdit {
    color: black;
    background: white;
}

QTabWidget::pane { /* The tab widget frame */
    border: 2px solid #AAAAAA;
    background: white;
    top: -2px;
}

QTabBar::tab {
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    min-width: 10ex;
    padding: 6px;
}

QTabBar::tab:selected {
    border-left: 2px solid #AAAAAA;
    border-right: 2px solid #AAAAAA;
    border-top: 2px solid #AAAAAA;
    background: white;
}
QTabBar::tab:!selected {
    background: #EEEEEE;
    border-bottom: 2px solid #AAAAAA;
}

QListView::item:selected {
   background: #1464a0;
   color: white;
}

QTableView {
   background: white;
   color: black;
}

QTableView::item:selected {
   background: #1464a0;
   color: white;
}

QToolTip {
    border: 1px solid black;
    border-radius: 4px;
    background: white;
    color: black; }

/* QMenu ----------------------------------------------------------- */

QMenu {
    background-color: white;
    }

QMenu::item {
    padding: 2px 25px 2px 25px;
    color: black;
    border: 1px solid transparent;
    margin: 2px;
}


QMenu::item:selected {
    background: #b5b5b5;
    color: black;
}


QMenu::item:checked {
    color: #1464a0;
    font: bold;
}

QMenu::item:unchecked {
    color: black;
}

QMenu::item:disabled {
    background: white;
    color:grey;
}

QMenu::indicator {
    width: 24px;
    height: 20px;
}

/* QRadioButton ----------------------------------------------------------- */

QRadioButton{
    color: black;
}

QRadioButton:disabled {
    color: grey;
}

QRadioButton::indicator {
    border: none;
    outline: none;
    margin-bottom: 2px;
    width: 25px;
    height: 25px;
}

QRadioButton::indicator:unchecked {
    image: url(://style/radio_unchecked.svg);
}

QRadioButton::indicator:unchecked:hover,
QRadioButton::indicator:unchecked:focus,
QRadioButton::indicator:unchecked:pressed {
    border: none;
    outline: none;
    image: url(://style/radio_unchecked_focus.svg);
}

QRadioButton::indicator:checked {
    border: none;
    outline: none;
    image: url(://style/radio_checked.svg);
}

QRadioButton::indicator:checked:hover,
QRadioButton::indicator:checked:focus,
QRadioButton::indicator:checked:pressed {
    border: none;
    outline: none;
    image: url(://style/radio_checked_focus.svg);
}

QRadioButton::indicator:checked:disabled {
    outline: none;
    image: url(://style/radio_checked_disabled.svg);
}

QRadioButton::indicator:unchecked:disabled {
    image: url(://style/radio_unchecked_disabled.svg);
}

/* QCheckBox -------------------------------------------------------------- */

QCheckBox{
    color: black;
}

QCheckBox::indicator {
    margin-left: 4px;
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked {
    image: url(://style/checkbox_unchecked.svg);
}

QCheckBox::indicator:unchecked:hover,
QCheckBox::indicator:unchecked:focus,
QCheckBox::indicator:unchecked:pressed {
    border: none;
    image: url(://style/checkbox_unchecked_focus.svg);
}

QCheckBox::indicator:unchecked:disabled {
    image: url(://style/checkbox_unchecked_disabled.svg);
}

QCheckBox::indicator:checked {
    image: url(://style/checkbox_checked.svg);
}

QCheckBox::indicator:checked:hover,
QCheckBox::indicator:checked:focus,
QCheckBox::indicator:checked:pressed {
    border: none;
    image: url(://style/checkbox_checked_focus.svg);
}

QCheckBox::indicator:checked:disabled{
    image: url(://style/checkbox_checked_disabled.svg);
}

QCheckBox::indicator:indeterminate {
    image: url(://style/checkbox_indeterminate.svg);
}

QCheckBox::indicator:indeterminate:disabled {
    image: url(://style/checkbox_indeterminate_disabled.svg);
}

QCheckBox::indicator:indeterminate:focus,
QCheckBox::indicator:indeterminate:hover,
QCheckBox::indicator:indeterminate:pressed {
    image: url(://style/checkbox_indeterminate_focus.svg);
}

/* QGroupBox -------------------------------------------------------------- */

QGroupBox::indicator {
    margin-left: 4px;
    width: 16px;
    height: 16px;
}

QGroupBox::indicator {
    margin-left: 2px;
}

QGroupBox::indicator:unchecked:hover,
QGroupBox::indicator:unchecked:focus,
QGroupBox::indicator:unchecked:pressed {
    border: none;
    image: url(://style/checkbox_unchecked_focus.svg);
}

QGroupBox::indicator:checked:hover,
QGroupBox::indicator:checked:focus,
QGroupBox::indicator:checked:pressed {
    border: none;
    image: url(://style/checkbox_checked_focus.svg);
}

QGroupBox::indicator:checked:disabled {
    image: url(://style/checkbox_checked_disabled.svg);
}

QGroupBox::indicator:unchecked:disabled {
    image: url(://style/checkbox_unchecked_disabled.svg);
}

/* QPushButton -------------------------------------------------------------- */

QPushButton {
    background-color: transparent ;
    border: 1px solid #AAAAAA;
    color: black;
    border-radius: 4px;
    padding: 6px;
    outline: none;
}

QPushButton[flat="true"]
{
    border: 0px;
}

QPushButton:disabled {
    color: grey;
}

QPushButton:focus {
    border: 2px solid #003bc9;
    color: #003bc9;
}

QPushButton:checked {
    background-color: #AAAAAA;
    border: 1px solid #AAAAAA;
    border-radius: 4px;
    padding: 3px;
    outline: none;
}

QPushButton:checked:disabled {
    border: 1px solid #32414B;
    color: grey;
    border-radius: 4px;
    padding: 3px;
    outline: none;
}

QPushButton::menu-indicator {
    subcontrol-origin: padding;
    subcontrol-position: bottom right;
    bottom: 4px;
}

QPushButton:pressed {
    background-color: #AAAAAA;
}

QPushButton:hover,
QPushButton:checked:hover{
    border: 1px solid #003bc9;
}

QPushButton:selected,
QPushButton:checked:selected{
    background: #1464A0;
    color: #32414B;
}

/* QCombobox -------------------------------------------------------------- */

QComboBox {
    padding-top: 2px;     /* This fix  #103, #111*/
    padding-bottom: 2px;  /* This fix  #103, #111*/
    padding-left: 4px;
    padding-right: 4px;
}

QComboBox QAbstractItemView {
    color: black;
    background-color: white;
    border-radius: 4px;
    border: 1px solid #32414B;
    selection-color: white;
    selection-background-color: blue;
}


QComboBox QAbstractItemView::item:hover {
    background-color: blue;
}

/* QSlider ---------------------------------------------------------------- */

QSlider:disabled {
    background: white;
}

QSlider:focus {
    border: none;
}

QSlider::groove:horizontal {
    background: white;
    border: 1px solid #32414B;
    height: 8px;
    margin: 0px;
    border-radius: 4px;
}

QSlider::sub-page:horizontal {
    background: #1464A0;
    border: 1px solid #32414B;
    height: 4px;
    margin: 0px;
    border-radius: 4px;
}

QSlider::sub-page:horizontal:disabled {
    background: #14506E;
}

QSlider::handle:horizontal {
    background: #787878;
    border: 1px solid #32414B;
    width: 8px;
    height: 8px;
    margin: -8px 0;
    border-radius: 4px;
}

QSlider::handle:horizontal:hover {
    background: #148CD2;
    border: 1px solid #148CD2;
}






